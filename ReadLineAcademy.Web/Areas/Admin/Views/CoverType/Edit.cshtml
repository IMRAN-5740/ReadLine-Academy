@model CoverType

@{
    ViewData["Title"] = "Edit";
}
<form method="post" asp-action="Edit">
    <div class="border p-3 mt-4">

        <div class="row pb-2">
            <h3 class="text-primary"> Edit CoverType</h3>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" class="form-control" />
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
       
        <button type="submit" class="btn btn-primary" style="width:150px"><i class="far fa-edit"></i> &nbsp;Edit</button>
        <a asp-controller="CoverType" asp-action="Index" class=" btn btn-info" style="width:150px"><i class="fa-solid fa-arrow-right fa-fade fa-sm"></i>&nbsp; Back to List</a>
    </div>

</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial"> </partial>
}

