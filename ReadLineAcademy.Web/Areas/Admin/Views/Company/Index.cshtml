

<div class="container p-3">

    <div class=" row pt-4">
        <div class="col-6 text-end">
            <h3 class="text-primary">Company List</h3>
        </div>
        <div class="col-6 text-end">
            <a asp-controller="Company" asp-action="Upsert" class="btn btn-outline-success">
                <i class="bi bi-plus-circle"></i> &nbsp; Create New Company
            </a>
        </div>

    </div>
    <br />
    <table id="myTable" class="table table-bordered table-striped" style="width:100%">
        <thead class="text-center">
            <tr>
                
                <th>Name</th>
                <th>Street Address</th>
                <th>City</th>
                <th>State</th>
                <th>Postal Code</th>
                <th>Phone Number</th>
                <th>Actions</th>
              
            </tr>
        </thead>
        
    </table>
</div>
@section Scripts{

    <script src="~/js/company.js"></script>
}
