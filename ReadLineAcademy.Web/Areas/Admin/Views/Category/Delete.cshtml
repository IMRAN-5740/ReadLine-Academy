@model Category

@{
    ViewData["Title"] = "Delete";
}

<form method="post" asp-action="Delete">
    <div class="border p-3 mt-4">
        <input asp-for="Id" hidden/>
        <div class="row pb-2">
            <h3 class="text-primary"> Delete Category</h3>
            <hr />
        </div>
        <div class="text-danger" asp-validation-summary="All"></div>
        <div class="mb-3">
            <label asp-for="Name"></label>
            <input type="text" asp-for="Name" disabled class="form-control" />
           
        </div>
        <div class="mb-3">
            <label asp-for="DisplayOrder"></label>
            <input type="text" asp-for="DisplayOrder" disabled class="form-control" />
         
        </div>
        <button type="submit" class="btn btn-danger" style="width:150px"><i class="fas fa-trash-alt"></i>&nbsp; Delete</button>
        <a asp-controller="Category" asp-action="Index" class=" btn btn-info" style="width:150px"><i class="fa-solid fa-arrow-right fa-fade fa-sm"></i>&nbsp; Back to List</a>
    </div>

</form>
@section Scripts
    {
    <partial name="_ValidationScriptsPartial"> </partial>
}
