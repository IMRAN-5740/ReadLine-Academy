@model IEnumerable<Product>


    <div class="row pb-3">
        @foreach(var product in Model)
        {
            <div class="col-lg-3 col-md-6">
                <div class=" row p-2">
                    <div class="col-12 p-1" style="border:1px solid ;border-radius">
                        <div class="card">
                        <img src="@product.ImageURL" width="100" height="300"  class="card-img-top rounded" />
                        <div class="card-body">
                            <div class="pl-1">
                                <p class="card-title h5 text-info">@product.Title</p>
                                <p class="card-title h5 text-info">@product.AuthorName</p>

                            </div>
                            <div class="pl-1">
                                <p> List Price : $$<strike> <b>@product.ListPrice.ToString("0.00")</b></strike></p>
                            </div>
                            <div class="pl-1">
                                <p> As low as : <b> $$@product.Price100.ToString("0.00")</b></p>
                            </div>
                        </div>
                        <div>
                            <a asp-action="Details" asp-route-productId="@product.Id" class=" btn btn-primary form-control"><i class="fa-solid fa-list"></i> &nbsp;Details </a>
                        </div>
                           
                        </div>
                    </div>
                </div>    
            </div>
        }

    </div>
